<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ms.android.trainnotification"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:allowBackup="true" >
        
        <activity
            android:name=".HomeScreenActivity"
            android:label="@string/title_activity_home_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name=".LiveStatusActivity"
            android:label="@string/live_status" >            
        </activity>
        
        <activity 
            android:name=".SetupNotifyActivity"
            android:label="@string/setup_notify_screen" >            
        </activity>
         
        <activity 
            android:name=".AddNotificationActivity"
            android:label="@string/add_notify_screen" >            
        </activity>
        
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings_screen"
            android:parentActivityName=".LiveStatusActivity" >            
        </activity>
           
        <service
            android:enabled="true"
            android:name="com.ms.android.service.NotificationService">
        </service>
        
        <service 
            android:name="com.ms.android.service.TrainLocationUpdateService">            
        </service>
        
        <service 
            android:name="com.ms.android.service.TrainStationUpdateService">            
        </service>
       
    </application>

</manifest>